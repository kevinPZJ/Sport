<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
  >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tv_head"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/default_headshot" />

    </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="小飞侠科比"
                android:textSize="18dip"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:id="@+id/layout_personal_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_personal_information"

                    android:text="个人信息  "
                    android:textSize="12sp"
                    android:textColor="@color/txt_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/user_profile_end_arrow"/>


            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
           android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@color/background_white">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="日均步数" />

                <TextView
                    android:id="@+id/tv_per_day_step"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="26sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="总公里数" />

                <TextView
                    android:id="@+id/tv_per_total_distance"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="26sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="达标天数" />

                <TextView
                    android:id="@+id/tv_complete_day"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="26sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:text="我的设备"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />


                <LinearLayout
                    android:id="@+id/layout_add_device"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/background_white"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="添加新设备"
                        android:textSize="18sp"
                        android:drawableLeft="@mipmap/ico_weibo"/>
                </LinearLayout>

            </LinearLayout>
            </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:text="目标设置"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
    </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_sport_goal"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/item_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    >

                    <TextView

                        android:id="@+id/tv_sport_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="未设置"
                        android:drawableRight="@mipmap/default_end_arrow"
                        android:textColor="@color/tips_black_color"
                        android:textSize="@dimen/text_size_button"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="运动目标"
                    android:drawableLeft="@mipmap/icon_sport_goal"
                    android:drawablePadding="5dp"
                    android:textColor="@color/txt_black_color"
                    android:textSize="@dimen/text_size_button"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <View style="@style/line_view_style_landscape"/>

    <RelativeLayout
        android:id="@+id/layout_weight_goal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv_weight_goal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="体重目标"
            android:drawableLeft="@mipmap/icon_status_weightbfs"
            android:drawablePadding="5dp"
            android:textColor="@color/txt_black_color"
            android:textSize="@dimen/text_size_button"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="right"
                android:text="未设置"
                android:gravity="center_vertical|right"
                android:id="@+id/tv_sex"
                android:drawableRight="@mipmap/default_end_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/tips_black_color"
                android:textSize="@dimen/text_size_button"/>


        </LinearLayout>
    </RelativeLayout>

    <View style="@style/line_view_style_landscape"/>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:text="状态提醒"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <RelativeLayout
        android:id="@+id/layout_sport_score"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="运动成绩提醒"
            android:drawableLeft="@mipmap/icon_sport_result_notify"
            android:drawablePadding="5dp"
            android:textColor="@color/txt_black_color"
            android:textSize="@dimen/text_size_button"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sport_alert"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="未设置"
                android:drawableRight="@mipmap/default_end_arrow"
                android:textColor="@color/tips_black_color"
                android:textSize="@dimen/text_size_button"/>

        </LinearLayout>
    </RelativeLayout>

    <View style="@style/line_view_style_landscape"/>

    <RelativeLayout
        android:id="@+id/layout_sleep_status"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv_sleep_alert"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="睡眠结果提醒"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/icon_sleep_result_notify"
            android:textColor="@color/txt_black_color"
            android:textSize="@dimen/text_size_button"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_work"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="未设置"
                android:drawableRight="@mipmap/default_end_arrow"
                android:textColor="@color/tips_black_color"
                android:textSize="@dimen/text_size_button"
                />


        </LinearLayout>
    </RelativeLayout>

    <View style="@style/line_view_style_landscape"
        android:id="@+id/view" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <RelativeLayout
        android:id="@+id/layout_setting"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="设置"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/icon_settings"
            android:textColor="@color/txt_black_color"
            android:textSize="@dimen/text_size_button"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_travel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical|right"
                android:textColor="@color/tips_black_color"
                android:textSize="@dimen/text_size_button"
                />

            <ImageButton
                android:src="@mipmap/default_end_arrow"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/line_view_style_landscape"/>
    <View
        android:id="@+id/vMasker"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:background="#e0000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

 </LinearLayout>

</LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>