<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">
    <LinearLayout
        android:paddingTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tv_head"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/default_headshot" />

    </LinearLayout>



<LinearLayout
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <TextView
        android:text="目标设置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
</LinearLayout>
    <RelativeLayout

        android:id="@+id/layout_nick_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="未设置"
                android:textColor="@color/tips_black_color"/>

            <ImageButton
                android:src="@mipmap/default_end_arrow"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
             />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="运动目标"
            android:drawableLeft="@mipmap/icon_sport_goal"
            android:drawablePadding="5dp"
            android:textColor="@color/txt_black_color"
            android:textSize="@dimen/text_size_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <View style="@style/line_view_style_landscape"/>

    <RelativeLayout
        android:id="@+id/layout_sex"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="体重目标"
            android:drawableLeft="@mipmap/icon_status_weightbfs"
            android:drawablePadding="5dp"
            android:textColor="@color/txt_black_color"
            android:textSize="@dimen/text_size_button"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="right"
                android:text=""
                android:gravity="center_vertical|right"
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="未设置"
                android:textColor="@color/tips_black_color"
                android:textSize="@dimen/text_size_button"/>

            <ImageButton
                android:src="@mipmap/default_end_arrow"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
             />
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/line_view_style_landscape"/>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:text="状态提醒"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <RelativeLayout
        android:id="@+id/layout_age"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="运动成绩提醒"
            android:drawableLeft="@mipmap/icon_sport_result_notify"
            android:drawablePadding="5dp"
            android:textColor="@color/txt_black_color"
            android:textSize="@dimen/text_size_button"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:hint="未设置"
                android:textColor="@color/tips_black_color"
                android:textSize="@dimen/text_size_button"/>

            <ImageButton
                android:src="@mipmap/default_end_arrow"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
             />
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/line_view_style_landscape"/>

    <RelativeLayout
        android:id="@+id/layout_work"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="睡眠结果提醒"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/icon_sleep_result_notify"
            android:textColor="@color/txt_black_color"
            android:textSize="@dimen/text_size_button"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_work"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:hint="未设置"
                android:textColor="@color/tips_black_color"
                android:textSize="@dimen/text_size_button"
                />

            <ImageButton
                android:src="@mipmap/default_end_arrow"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/line_view_style_landscape"
        android:id="@+id/view" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <RelativeLayout
        android:id="@+id/layout_travel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="设置"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/icon_settings"
            android:textColor="@color/txt_black_color"
            android:textSize="@dimen/text_size_button"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_travel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical|right"
                android:textColor="@color/tips_black_color"
                android:textSize="@dimen/text_size_button"
                />

            <ImageButton
                android:src="@mipmap/default_end_arrow"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/line_view_style_landscape"/>
    <View
        android:id="@+id/vMasker"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:background="#e0000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>


